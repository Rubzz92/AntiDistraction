{
  "manifest_version": 3,
  "name": "Anti-Distraction",
  "version": "1.0",
  "permissions": [
    "declarativeNetRequest",
    "declarativeNetRequestWithHostAccess",
    "storage"
  ],
  
  "host_permissions": [
    "*://m.youtube.com/*",
    "*://instagram.com/*",
    "*://www.instagram.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  }
}
